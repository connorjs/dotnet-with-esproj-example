<Project>
	<Import Project="$(MSBuildThisFileDirectory)../Workspace.props" />

	<!-- .NET integration -->
	<PropertyGroup>
		<!-- Artifacts (needed different property for JSPS) -->
		<BaseIntermediateOutputPath>$(WorkspaceRoot)artifacts/obj/$(MSBuildProjectName)/</BaseIntermediateOutputPath>

		<!-- esproj still needs a target framework -->
		<!-- This copies `Sdk.props` which has Windows-only condition. -->
		<TargetFrameworkVersion>v4.7.2</TargetFrameworkVersion>
		<TargetFrameworkMoniker>.NETFramework,Version=$(TargetFrameworkVersion)</TargetFrameworkMoniker>
	</PropertyGroup>

	<!-- Customize npm build -->
	<PropertyGroup>
		<!-- Skip npm install because we are using pnpm; see PnpmInstall in Directory.Build.targets -->
		<ShouldRunNpmInstall>false</ShouldRunNpmInstall>
	</PropertyGroup>
</Project>
