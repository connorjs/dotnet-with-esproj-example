<Project>
	<Import Project="$(MSBuildThisFileDirectory)../Workspace.props" />

	<!-- .NET integration -->
	<PropertyGroup>
		<!-- Artifacts (needed different property for JSPS) -->
		<BaseIntermediateOutputPath>$(WorkspaceRoot)artifacts/obj/$(MSBuildProjectName)/</BaseIntermediateOutputPath>

		<!-- esproj still needs a target framework -->
		<TargetFramework>net8.0</TargetFramework>

		<!-- Mark all projects as test projects so that `dotnet test` will run its tests -->
		<IsTestProject>true</IsTestProject>
	</PropertyGroup>

	<!-- Customize npm build -->
	<PropertyGroup>
		<!-- Skip npm install because we are using pnpm; see Directory.Build.targets -->
		<ShouldRunNpmInstall>false</ShouldRunNpmInstall>
	</PropertyGroup>
</Project>
